<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context=".MainActivity" >

    <ScrollView
        android:id="@+id/scrollView"
        android:layout_width="fill_parent"
        android:layout_height="200dp"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:background="#111111"
        android:scrollbarStyle="outsideOverlay" >

        <TextView
            android:id="@+id/textView1"
            android:layout_width="fill_parent"
            android:textColor="#ffffff"
            android:text="abcdefg"
            android:layout_height="wrap_content" />
    </ScrollView>

    <Button
        android:id="@+id/btn_gotoc"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/editText1"
        android:layout_below="@+id/button1"
        android:text="Goto CCMD" />

    <EditText
        android:id="@+id/editText1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBaseline="@+id/button1"
        android:layout_alignBottom="@+id/button1"
        android:layout_alignLeft="@+id/scrollView"
        android:ems="10"
        android:text="date" />

    <Button
        android:id="@+id/button1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/scrollView"
        android:layout_toRightOf="@+id/editText1"
        android:text="Run" />

    <Button
        android:id="@+id/btn_getRoot"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBaseline="@+id/btn_gotoc"
        android:layout_alignBottom="@+id/btn_gotoc"
        android:layout_toRightOf="@+id/btn_gotoc"
        android:text="获取Root权限" />

</RelativeLayout>